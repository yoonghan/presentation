body {
  font-size: 30pt;
  margin: 0;
  padding: 0;
}

#header
  margin: 5px;
  position: absolute;
  color: white;
  font-size: 10pt;
  top: 0;
  z-index: 2;

#video-clip {
  position: relative;
  margin: 0;
  padding: 0;
  width: 100vw;
  height: 100vh;
  z-index: -99;

  #bubble-container {
    position: absolute;
    top: 0;
    left: 0;

    .bubbles {
      border: 5px solid;
      border-radius: 50%;
      box-shadow: 0 0 20px 5px;
      position: fixed;
      opacity: 0;
    }
  }

  #presentation {
    position: absolute;
    top: 50%;
    margin: 0;
    left: 50%;
    margin-right: -50%;
    transform: translate(-50%, -50%);
    z-index: 1;

    #floatingText {
      width: 300px;
      font-weight: bold;
      text-align: center;
    }
  }

  #video-clip-layer {
    color: #FFFFFF;
    opacity: 0;

    #txt-hello {
      opacity: 0;
      display: none;
      position: fixed;
      font-style: italic;
      margin: 60px 0 0 60px;

      #txt-hello-greetings {
        float: left;
      }
      #txt-hello-user {
        font-weight: bold;
      }
      #txt-hello-thanks {
        opacity: 0;
        display: none;
        font-size: 20pt;
        margin-top: 100px;
      }
      #txt-hello-location {
        opacity: 0;
        display: none;
        font-size: 20pt;
        margin-top: 100px;
        font-weight: bold;
      }
    }

    #putt-putt-car {
      background: url("/public/img/truck.svg") no-repeat;
      height: 100%;
      width: 100%;
      position: fixed;
      background-size: 50%;
      left: 600px;

      #putt-putt-car-tyre {
        background: url("/public/img/tyre.svg") no-repeat;
        height: 100%;
        width: 100%;
        background-size: 50%;
        position: absolute;
      }

      #putt-putt-car-smog {
        background: url("/public/img/smog.svg") no-repeat;
        height: 100%;
        width: 100%;
        background-size: 50%;
        position: absolute;
      }
    }
  }
}

#map {
  background: url("/public/img/world.gif") cover;
  display: none;
}

#beijing {
  position: absolute;
  top: 50px;
  left: 50px;
  display: none;
}

#malaysia {
  position: absolute;
  top: 200px;
  left: 150px;
  display: none;
}

.circle-pointer {
  border: 3px solid;
  border-color: red;
  border-radius: 50%;
  position: absolute;
  width: 30px;
  height: 30px;
}

.pointer {
  border-radius: 50%;
  background-color: red;
  position: absolute;
  box-shadow: 1px 1px 10px 1px;
  opacity: 0.2;
  display: none;
  width: 21px;
  height: 21px;
  top: 7px;
  left: 7px;
}

.fab {
  width: 56px;
  height: 56px;
  background-color: #1565C0;
  opacity: 0;
  position: absolute;
  top: 20vh;
  left: 20vw;
  border-radius: 50px;
  box-shadow: 0px 5px 3px #555;
  z-index: 10;
}

#navigation {
  height: 30px;
  width: 100%;
  padding-top: 5px;
  background: #000000;
  position: absolute;
  font-size: 10pt;
  bottom: 0
}

button {
  padding:3px;
  margin-left: 10px;
}
