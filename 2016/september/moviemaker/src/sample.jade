html
  head
    title This is a movie
    include ../dist/header.incl
    style.
      .stage {
        width: 300px; height: 300px;
        -webkit-perspective: 1600px;
        -webkit-perspective-origin: 50% -240px;
      }
      figure {
        display: block;
        position: absolute;
        width: 100px;
        height: 100px;
        border: 1px solid #333333;
        border-right: none;
        background-color: #506493;
      }
      figure>div {
        color: #ffffff;
        font-size: 40pt;
        text-align: center;
        display: table-cell;
        vertical-align: middle;
        height: inherit;
        width: inherit;
      }

      .cap {
        background-color: #506493;
      }
      .inner {
        border: none;
        border-right: none;
        background-color: #162955;
      }
      #cube { -webkit-transform-style: preserve-3d; margin-top: 100px;}
      .particle {
        -webkit-transform-origin: 0 0 0;
        background-color: #dd0000;
        height: 10px;
        width: 10px;
        border-radius: 5px;
      }
      .particle.left{
        -webkit-transform: translateX(50px);
      }
      .particle.middle{
        -webkit-transform: translateX(75px);
      }
      .particle.right{
        -webkit-transform: translateX(100px);
      }


      figure { -webkit-transform-origin: 50% 50% 0; }

      .top { -webkit-transform-origin: top left 0; -webkit-transform: rotateX(90deg) translateY(-50px) rotateY(-90deg);}
      .bottom { -webkit-transform: rotateX(-90deg) translateZ(50px);}

      .back { -webkit-transform: rotateY(180deg) translateZ(50px); }
      .front { -webkit-transform: translateZ(50px); }
      .left { -webkit-transform: rotateY(-90deg) translateZ(50px); }
      .right { -webkit-transform: rotateY(90deg) translateZ(50px); }
      .innerback { -webkit-transform: rotateY(180deg) translateZ(48px); }
      .innerfront { -webkit-transform: translateZ(48px); }
      .innerleft { -webkit-transform: rotateY(-90deg) translateZ(48px); }
      .innerright { -webkit-transform: rotateY(90deg) translateZ(48px); }

      //@-webkit-keyframes rotate {
      //  0% { -webkit-transform: rotateY(0); }
      //  100% { -webkit-transform: rotateY(360deg); }
      //}
      //#cube { -webkit-animation: rotate 10s infinite linear; -webkit-transform-origin: 25% 25% 0;}

  body
    div(class="stage")
      div(id="cube")
        div(class="particle left")
        div(class="particle middle")
        div(class="particle right")
        figure(class="top cap")
          div
            p &copy;
        figure(class="bottom")
          div
            p ?
        figure(class="left")
          div
            p ?
        figure(class="right")
          div
            p ?
        figure(class="front")
          div
            p ?
        figure(class="back")
          div
            p ?
        figure(class="innerleft inner")
        figure(class="innerright inner")
        figure(class="innerfront inner")
        figure(class="innerback inner")

    include ../dist/footer.incl
    script(src='/js/animate.js')

    script.

      var timeController = (function(){
        //Create timeline
        var $animate = new Animate();
        $animate.start();
      }());
